{
  "name": "artifacts-url-comments",
  "version": "1.1.0",
  "description": "Add comments with artifacts urls to pull request or associated issues",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "prebuild": "npm run delete",
    "delete": "del-cli --force ./dist",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "npm run build && npm run format && npm run lint && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tonyhallett/artifacts-url-comments.git"
  },
  "keywords": [
    "actions",
    "node",
    "artifact",
    "artifacts",
    "comment",
    "comments"
  ],
  "author": "tony hallett",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.32",
    "@typescript-eslint/parser": "^4.17.0",
    "@vercel/ncc": "^0.28.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.17.0",
    "eslint-plugin-github": "^4.1.3",
    "eslint-plugin-jest": "^27.2.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^4.0.0",
    "prettier": "2.2.1",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@tonyhallett/github-actions": "^1.4.1"
  }
}
